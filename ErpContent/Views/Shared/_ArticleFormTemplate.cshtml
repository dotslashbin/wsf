<script id="article-form-template" type="text/html">

    <br />
    <form name="article-form" id="article-form" action="#">
        <div class="row form-group">
            <div class="col-sm-3">Title: </div>
            <div class="col-sm-8"><input class="form-control input-sm" id="Title" name="Title" data-bind="value: Title, valueUpdate: 'blur'" required /></div>
        </div>

        <div class="row form-group">
            <div class="col-sm-3">Short Title: </div>
            <div class="col-sm-8"><input class="form-control input-sm" id="ShortTitle" data-bind="value: ShortTitle, valueUpdate: 'blur'" required /></div>
        </div>

        <div class="row form-group">
            <div class="col-sm-3">Author: </div>
            <div class="col-sm-8"><input class="form-control input-sm" id="Author" data-bind="value: Author, valueUpdate: 'blur'" required /></div>
        </div>

        <div class="row form-group">
            <div class="col-sm-3">Notes: </div>
            <div class="col-sm-8"><textarea class="btn-toolbar form-control input-sm" data-rol="editor-toolbar" data-target="#Notes" runat="server" name="Notes" id="Notes" rows="20" data-bind="value: Notes, valueUpdate: 'blur'" required></textarea></div>
        </div>

    </form>
</script>